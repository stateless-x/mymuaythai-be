{
  "name": "mymuaythai-be",
  "version": "1.0.0",
  "type": "module",
  "description": "MyMuayThai Backend Platform for managing gyms and trainers",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:seed:provinces": "bun run src/db/province-seed.ts",
    "db:seed:dev": "bun run src/db/dev-seed.ts",
    "db:seed:massive": "bun run src/db/massive-seed.ts",
    "db:cleanup": "bun run src/db/cleanup.ts",
    "db:cleanup:full": "bun run src/db/cleanup.ts full",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun run db:cleanup && bun run db:migrate",
    "db:fresh": "bun run db:reset && bun run db:seed:provinces && bun run db:seed:massive",
    "db:fresh:dev": "bun run db:reset && bun run db:seed:provinces && bun run db:seed:dev",
    "db:fresh:full": "bun run db:reset && bun run db:seed:provinces && bun run db:seed",
    "db:setup:production": "bun run db:migrate && bun run db:seed:provinces",
    "setup:dev": "bun run db:migrate && bun run db:seed:provinces && bun run db:seed:dev"
  },
  "keywords": [
    "muaythai",
    "gym",
    "trainer",
    "fastify",
    "postgresql"
  ],
  "author": "Purin Buriwong",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "7.0.3",
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "9.1.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "2.1.0",
    "@types/redis": "^4.0.11",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "fastify": "^4.29.1",
    "pg": "^8.16.0",
    "redis": "^5.1.1",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "bun-types": "^1.2.15",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3"
  }
}
