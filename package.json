{
  "name": "mymuaythai-be",
  "version": "1.0.0",
  "description": "MyMuayThai Backend Platform for managing gyms and trainers",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts",
    "db:seed:provinces": "bun run src/db/province-seed.ts",
    "db:seed:dev": "bun run src/db/dev-seed.ts",
    "db:cleanup": "bun run src/db/cleanup.ts",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "muaythai",
    "gym",
    "trainer",
    "fastify",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.1",
    "fastify": "^4.26.2",
    "pg": "^8.16.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.8",
    "bun-types": "^1.2.15",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.3.3"
  }
}
