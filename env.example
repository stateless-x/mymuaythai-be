# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mymuaythai
DB_USER=admin
DB_PASSWORD=admin

# Server Configuration
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# API Configuration
API_VERSION=1.0.0
API_TITLE="MyMuayThai API"
API_DESCRIPTION="API for managing Muay Thai gyms and trainers"

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://admin:admin@localhost:5432/mymuaythai 

# Lower the production limit to 50 requests per 5 minutes
RATE_LIMIT_MAX=50
# Change to 10 minutes (10 * 60 * 1000 ms)
RATE_LIMIT_WINDOW=600000 